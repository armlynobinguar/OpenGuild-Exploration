{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Define the library files to be included
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Specify module code generation
    "moduleResolution": "bundler", // Module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensures that each file can be safely transpiled independently
    "jsx": "preserve", // JSX code generation
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Next.js plugin for TypeScript
      }
    ],
    "paths": {
      "@/*": ["./*"] // Path mapping for easier imports
    },
    "typeRoots": [
      "./node_modules/@types", // Default types directory
      "./src/types" // Custom types directory, if applicable
    ]
  },
  "include": [
    "next-env.d.ts", // Include Next.js types
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TSX files
    ".next/types/**/*.ts" // Include types generated by Next.js
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}
